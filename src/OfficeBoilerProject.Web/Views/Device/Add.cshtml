@model OfficeBoilerProject.DeviceAppService.Dto.DeviceDtoPost
@{
    ViewData["Title"] = "Add";
    var persons = ViewBag.SelectPerson as SelectList;
}

<h2>Add New Device</h2>

<hr />

<form method="post">
    <div class="form-group">
        <input type="text" name="Name" placeholder="Name" class="form-control" />
        @Html.DropDownListFor(x => x.PersonId, persons, "Select Person")
    </div>
    <button type="submit" class="btn btn-primary">@("Add")</button>
</form>

